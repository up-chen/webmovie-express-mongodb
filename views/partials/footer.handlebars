<nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
	<div class="container">
		<div class="navbar-header">
			<a href="/" class="navbar-brand">回首页</a>
		</div>
		{{#if user}}
			<p class="navbar-text navbar-right" >
				<a href="/users/info/{{user._id}}">欢迎您 {{user.username}}</a>
				<span>&nbsp;|&nbsp;</span>
				<a href="/users/signout">登出</a>
			</p>
		{{else}}
			<p class="navbar-text navbar-right" >
				<button class="btn btn-primary" data-toggle="modal" data-target="#signupModal" >注册</button>
				<span>&nbsp;|&nbsp;</span>
				<button class="btn btn-primary" data-toggle="modal" data-target="#signinModal" >登录</button>
			</p>
		{{/if}}	
	</div>
</nav>

<div id="signupModal" class="modal fade" data-backdrop data-keyboard>
	<div class="modal-dialog">
		<div class="modal-content">
			<form role="form" id="signupForm">
				<div class="modal-haeder">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
						&times;
					</button>
					<h4 class="modal-title" id="signupModaltitle">注册</h4>
				</div>
				<div class="modal-body">
					<div class="form-group">
						<label for="signupName">用户名</label>
						<input type="text" name="username" id="signupName" class="form-control">
					</div>
					<div class="form-group">
						<label for="signupPassword">密码</label>
						<input type="text" name="password" id="signupPassword" class="form-control">
					</div>
				</div>
				<div class="modal-footer">
					<div align="center">
		                <button onclick="signupCheck()" class='btn btn-success' >注册</button>
					</div>
            	</div>
			</form>				
		</div>
	</div>
</div>

<div id="signinModal" class="modal fade" data-backdrop>
	<div class="modal-dialog">
		<div class="modal-content">
			<form id="signinForm " onsubmit="return signinCheck()">
				<div class="modal-haeder">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
						&times;
					</button>
					<h4 class="modal-title" id="signinModaltitle">登录</h4>
				</div>
				<div class="modal-body">
					<div class="form-group">
						<label for="fieldName">用户名</label>
						<input type="text" name="username" id="fieldName" class="form-control">
					</div>
					<div class="form-group">
						<label for="fieldPassword">密码</label>
						<input type="text" name="password" id="fieldPassword" class="form-control">
					</div>
				</div>
				<div class="modal-footer">
					<div align="center">
		                <button type="submit" class="btn btn-success">登录</button>
					</div>
	            </div>
			</form>
		</div>
	</div>
</div>

<script type="text/javascript" src="/javascripts/verify.js"></script>
