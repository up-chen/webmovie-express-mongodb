{{> header}}
<div class="container">
	<div class="row">
		<table class="table table-hover table-border">
			<thead>
				<tr>
					<th>电影名字</th>
					<th>导演</th>
					<th>国家</th>
					<th>上映年份</th>
					<th>录入时间</th>
					<th>查看</th>
					<th>更新</th>
					<th>删除</th>
				</tr>
			</thead>
			<tbody>
				{{#each movies}}
					<tr class="item-id-{{id}}">
						<td>{{title}}</td>
						<td>{{director}}</td>
						<td>{{country}}</td>
						<td>{{year}}</td>
						<td>{{moment meta.updateAt}}</td>
						<td><a href="/movie/{{id}}" target="_blank">查看</a></td>
						<td><a href="/admin/movie/update/{{id}}" target="_blank">更新</a></td>
						<td><button class="btn btn-danger del" type="button" data-id="{{id}}" data-type="movie">删除
						</button></td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>

{{> footer}}
<script type="text/javascript" src="/javascripts/delete.js"></script>

