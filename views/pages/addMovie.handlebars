{{> header}}
<div class="container">
	<div class="row">
		<form id="addMovieForm" class="form-horizontal" method="post" action="/admin/movie/new" enctype="multipart/form-data">
			<input type="hidden" id="movieiId" name="id" value="{{movie.id}}">
			<div class="form-group">
				<label class="col-sm-2 control-label" for="inputDouban">豆瓣同步</label>
				<div class="col-sm-8">
					<input id="inputDouban" type="text" class="form-control">
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="inputTitle">电影名字</label>
				<div class="col-sm-8">
					<input id="inputTitle" type="text" name="title" class="form-control" value="{{movie.title}}">
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="categoryName">电影类别</label>
					<input type="hidden" id="movieCategory" name="movieCategory" data-c="{{movie.category}}">
				<div class="col-sm-8">
					{{#each categories}}
					<label class="checkbox-inline">
						<input type="checkbox" name="category" id="inlineCheckbox{{@index}}" value="{{_id}}">{{name}}
					</label>
					{{/each}}
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="inputCategory">新增类别</label>
				<div class="col-sm-8">
					<input id="inputCategory" type="text" name="newCategory" class="form-control">
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="inputDirector">电影导演</label>
				<div class="col-sm-8">
					<input id="inputDirector" type="text" name="director" class="form-control" value="{{movie.director}}">
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="inputLanguage">语种</label>
				<div class="col-sm-8">
					<input id="inputLanguage" type="text" name="language" class="form-control" value="{{movie.language}}">
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="inputCountry">国家</label>
				<div class="col-sm-8">
					<input id="inputCountry" type="text" name="country" class="form-control" value="{{movie.country}}">
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="inputPoster">封面图片</label>
				<div class="col-sm-8">
					<input id="inputPoster" type="text" name="poster" class="form-control" value="{{movie.poster}}">
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="uploadPoster">海报上传</label>
				<div class="col-sm-10">
					<input id="uploadPoster" type="file" name="localposter" >
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="inputFlash">片源地址</label>
				<div class="col-sm-8">
					<input id="inputFlash" type="text" name="flash" class="form-control" value="{{movie.flash}}">
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="inputYear">上映年份</label>
				<div class="col-sm-8">
					<input id="inputYear" type="text" name="year" class="form-control" value="{{movie.year}}">
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="inputSummary">电影简介</label>
				<div class="col-sm-8">
					<textarea id="inputSummary" name="summary" class="form-control" value="{{movie.summary}}"></textarea>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-8">
					{{!-- <button class='btn btn-primary'>录入</button> --}}
					<input type="button" class="btn btn-primary" onclick="newCategoryCheck()" value="录入">
				</div>
			</div>
		</form>
	</div>
</div>

<script type="text/javascript">
	var categories = $('#movieCategory').data('c')
	$('input[type="checkbox"]').each(function(){
		if(categories.indexOf($(this).val())!== -1){
			$(this).attr('checked', 'true')
		}
	})
</script>
{{> footer}}