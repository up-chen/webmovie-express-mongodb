{{> header}}
<div class="container">
	<div class="row">
		<table class="table table-hover table-border">
			<thead>
				<tr>
					<th>电影类别</th>
					<th>添加时间</th>
					<th>查看</th>
					<th>删除</th>
				</tr>
			</thead>
			<tbody>
				{{#each categories}}
					<tr class="item-id-{{id}}">
						<td>{{name}}</td>
						<td>{{moment meta.updateAt}}</td>
						<td><a href="/category/{{id}}" target="_blank">查看</a></td>
						<td><button class="btn btn-danger del" type="button" data-id="{{id}}" data-type="category">删除
						</button></td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>

{{> footer}}
<script type="text/javascript" src="/javascripts/delete.js"></script>