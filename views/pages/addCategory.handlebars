{{> header}}
<div class="container">
	<div class="row">
		<form class="form-horizontal" method="post" action="/admin/category/new">
			<input type="hidden" name="id" value="{{category.id}}">
			<div class="form-group">
				<label class="col-sm-2 control-label" for="inputName">电影类别</label>
				<div class="col-sm-10">
					<input id="inputName" type="text" name="name" class="form-control" value="{{category.name}}">
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button class='btn btn-primay' type="submit">录入</button>
				</div>
			</div>
		</form>
	</div>
</div>
